<Window x:Class="W05.ExDockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExDockPanel" Height="435" Width="508">
    <DockPanel LastChildFill="False" Width="300" Height="200">
        <TextBlock DockPanel.Dock="Top" Background="Red">Dock - 'Top'</TextBlock>  
        <Button DockPanel.Dock="Top" Content="Dock = 'Top'" />
        <Canvas Height="25" Background="Yellow" DockPanel.Dock="Bottom">
            <TextBlock>Dock = 'Bottom'</TextBlock>
        </Canvas>
        <TextBlock DockPanel.Dock="Left" Background="LightGreen">
            Dock = 'Left'
        </TextBlock>
    </DockPanel>
</Window>
