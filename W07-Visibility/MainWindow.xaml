<Window x:Class="W07_Visibility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <WrapPanel Width="300" Height="200" Background="Yellow">
        <Button Visibility="Hidden" Content="Button #01 Hidden" Width="200" />
        <Button Visibility="Visible" Content="Button #02 Visiable" Width="100" />
        <!--Collapsed 不只不會顯示也不會占用空間-->
        <Button Visibility="Collapsed" Content="Button #03 Collapsed" Width="130" />
        <Button Visibility="Visible" Content="Button #04 Visible" Width="130" />
        <Button Visibility="Visible" Content="Button #05 Visible" Width="200" />
        <Button Visibility="Visible" Content="Button #06 Visible" Width="150" />
    </WrapPanel>
</Window>
